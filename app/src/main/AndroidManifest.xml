<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.flagsapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FlagsApp">
        <activity
            android:name=".UI.GuessTheCountryActivity"
            android:exported="false" />
        <activity
            android:name=".UI.ModeActivity"
            android:exported="false" />
        <activity
            android:name=".UI.AuthActivity"
            android:exported="false"
            android:label="@string/title_activity_auth"
            android:theme="@style/Theme.FlagsApp.NoActionBar" />
        <activity
            android:name=".UI.LeaderboardActivity"
            android:exported="false" />
        <activity
            android:name=".UI.AuthActivity2"
            android:exported="false" />
        <activity
            android:name=".UI.GuessTheFlagActivity"
            android:exported="false" />

        <activity android:name=".UI.LeaderboardActivity2"
            android:exported="false"/>
        <activity
            android:name=".UI.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>